@using MVCDog.Models
@model IEnumerable<DogAllViewModel>
@{ ViewData["Title"] = "All"; }

<h1> All Dogs</h1>
<p>
    <a asp-action= "Create"> Create New Dog</a>
</p>
<form asp-controller="Dog" asp-action="All" method="get">
    <p>
        Breed: <input type="text" name="SearchStringBreed" />

        Name: <input type="text" name="SearchStringName" />
        <input type="submit" value="Filter" />

    </p>
</form>


<table class= "table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Age)
            </td>
            <td>
                @Html.DisplayFor(model => item.Breed)
            </td>
            <td>
                <img src = "@Html.DisplayFor(model => item.Picture)" alt="Image" width="100px"/>
            </td>
            <td>
               <img src = "@Html.DisplayFor(model => item.Picture)" alt="Image" width="100px"/>
               
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Dog" asp-route-id="@item.Id"> Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
            </td>
            
        </tr>
            }
    </tbody>
</table>