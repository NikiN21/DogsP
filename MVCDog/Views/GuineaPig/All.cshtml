@using MVCDog.Models
@model IEnumerable<DogAllViewModel>
@{ ViewData["Title"] = "All"; }

<h1> All Dogs</h1>
<p>
    <a asp-action="Create"> Create New Guinea Pig</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Age)
                </td>
               
                <td>
                    <img src="@Html.DisplayFor(model => item.Picture)" alt="Image" width="100px" />
                </td>
            </tr>
        }
    </tbody>
</table>